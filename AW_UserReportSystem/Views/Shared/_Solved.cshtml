@{
    Layout = "_Layout";
}

<h1>Solved?</h1>

<h3>Proceed to delete this report if it has been solved.</h3>
<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        @RenderBody()
    </dl>

    <form asp-action="Solved">
        <input type="hidden" asp-for="@ViewData["ItemId"]" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>